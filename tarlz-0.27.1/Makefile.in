	  $(DISTNAME)/testsuite/ug32chars.tar.lz \
	  $(DISTNAME)/testsuite/eoa_blocks.lz
	rm -f $(DISTNAME)

clean :
	-rm -f $(progname) $(objs)

distclean : clean
	-rm -f Makefile config.status *.tar *.tar.lz
